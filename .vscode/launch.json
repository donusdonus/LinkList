{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Existing CMake Build",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/test/build/app.exe",  
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/test/build",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw32/bin/gdb.exe",  
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}